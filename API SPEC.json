  "components": {
    "parameters": {
      "pagePagination": {
        "name": "page",
        "in": "query",
        "description": "Page Number",
        "required": false,
        "schema": {
          "type": "integer",
          "default": 1,
          "example": 1
        }
      },
      "perpagePagination": {
        "name": "perpage",
        "in": "query",
        "description": "Items per page",
        "required": false,
        "schema": {
          "type": "integer",
          "default": 10,
          "example": 10
        }
      },
      "search": {
        "name": "search",
        "in": "query",
        "description": "Search Keyword",
        "required": false,
        "schema": {
          "type": "string",
          "default": "",
          "example": ""
        }
      },
      "categoryId": {
        "name": "category_id",
        "in": "path",
        "description": "Category Id",
        "required": true,
        "schema": {
          "type": "string",
          "example": "uuid"
        }
      },
      "productId": {
        "name": "product_id",
        "in": "path",
        "description": "Product Id",
        "required": true,
        "schema": {
          "type": "string",
          "example": "uuid"
        }
      }
    },
    "schemas": {
      "BaseResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 200
          },
          "status": {
            "type": "string",
            "example": "OK"
          },
          "message": {
            "type": "string",
            "example": "Success"
          }
        }
      },
      "MetaPagination": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "page": {
                "type": "number",
                "example": 1
              },
              "perpage": {
                "type": "number",
                "example": 10
              },
              "total_page": {
                "type": "number",
                "example": 5
              },
              "total_item": {
                "type": "number",
                "example": 45
              }
            }
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Eletronik"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "uuid"
          },
          "code": {
            "type": "string",
            "example": "P001"
          },
          "name": {
            "type": "string",
            "example": "Indomie Soto"
          },
          "unit": {
            "type": "string",
            "example": "Kardus"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "stock": {
            "type": "integer",
            "example": 125
          },
          "purchase_price": {
            "type": "number",
            "example": 10.0
          },
          "selling_price": {
            "type": "number",
            "example": 12.0
          },
          "description": {
            "type": "string",
            "example": "Product Description"
          },
          "photo": {
            "type": "string",
            "example": "https://127.0.0.1/images/P001.jpg"
          }
        }
      },
      "ProductRequest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "P001"
          },
          "name": {
            "type": "string",
            "example": "Indomie Soto"
          },
          "unit": {
            "type": "string",
            "example": "Kardus"
          },
          "category_id": {
            "type": "string",
            "example": "uuid"
          },
          "stock": {
            "type": "integer",
            "example": 125
          },
          "purchase_price": {
            "type": "number",
            "example": 10.0
          },
          "selling_price": {
            "type": "number",
            "example": 12.0
          },
          "description": {
            "type": "string",
            "example": "Product Description"
          },
          "photo": {
            "type": "string",
            "example": "https://127.0.0.1/images/P001.jpg"
          }
        }
      }
    }
